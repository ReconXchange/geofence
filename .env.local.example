# Copy this file to .env for local development
# cp .env.local.example .env

# Database
DATABASE_URL="postgresql://trackshift:trackshift@localhost:5432/trackshift?schema=public"

# Auth - Generate a strong secret in production
JWT_SECRET="dev-secret-change-in-production-use-at-least-32-chars"
JWT_EXPIRES_IN="7d"

# App
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# Location tracking interval (in milliseconds)
# Default: 300000 (5 minutes)
NEXT_PUBLIC_LOCATION_PING_INTERVAL="300000"
